<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@drawable/bug"
    tools:context=".ReportBug">

    <!-- Content View -->
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="125dp"
            android:layout_marginStart="300dp"
            android:src="@drawable/bugreport" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id= "@+id/text1"
            android:fontFamily="@font/playpensans"
            android:text="REPORT"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="160dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below= "@+id/text1"
            android:fontFamily="@font/playpensans"
            android:text="BUG"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="0dp"
            android:layout_marginStart="100dp"/>




        <EditText
            android:id="@+id/bugDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Describe the bug"
            android:textColor="@color/black"
            android:inputType="textLongMessage"
            android:background="#ECECEC"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="60dp"
            android:textSize="16dp"
            android:paddingTop="-160dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="250dp"/>

        <LinearLayout
            android:id="@+id/media"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/bugDescriptionEditText"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/attachMediaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose File"
                android:layout_marginTop="30dp"
                android:backgroundTint="#EB047EDF"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/attachedMediaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="27dp"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>
        <Button
            android:id="@+id/submitBugButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Bug"
            android:layout_below="@id/media"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/toolbar"
                android:elevation="4dp"
                android:background="@color/black"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_container"/>

        </LinearLayout>
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/activity_navheader"
        app:menu="@menu/nav_menu"
        app:itemIconTint="#C81538"
        app:itemTextColor="@color/black">


    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
