<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/food_bkg">

    <Button
        android:id="@+id/clrbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:text="Clear Filters"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/playpensans"
        android:textColor="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorWhite"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id ="@+id/ratingfilter"
        android:layout_marginTop="150dp"
        android:background="@drawable/border_bkg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratingtitle"
            android:text="Choose Rating"
            android:fontFamily="@font/robotoslab_regular"
            android:textColor="#0446B6"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="15dp"/>
        <RadioGroup
            android:id="@+id/ratingRadioGroup"
            android:layout_below="@id/ratingtitle"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rating4PlusRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/e4"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="4+" />
            <RadioButton
                android:id="@+id/rating3PlusRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/e3"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="3+"/>
            <RadioButton
                android:id="@+id/rating2PlusRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/e2"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="2+"/>
            <RadioButton
                android:id="@+id/rating1PlusRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/e1"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="1+"/>
        </RadioGroup>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodinterests"
        android:layout_below="@+id/ratingfilter"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_bkg">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/interesttitle"
            android:text="Choose Food Interests"
            android:fontFamily="@font/robotoslab_regular"
            android:textColor="#0446B6"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foodInterst"
            android:layout_below="@id/interesttitle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Search for interested foods"
                android:inputType="text|textMultiLine"
                android:completionThreshold="1" />

            <Button
                android:id="@+id/addbtn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_add_24"
                android:backgroundTint="@color/btncolor" />
        </LinearLayout>
        <TextView
            android:id="@+id/selectedFoodItemsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodInterst"
            android:layout_marginTop="16dp"
            android:text="Selected Food Items:"
            android:layout_marginBottom="30dp"
            android:textColor="#343942"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodinterests"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:text="Back"
            android:textColor="@color/btncolor"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnApplyDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Apply"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorAccent"/>

    </LinearLayout>

</RelativeLayout>