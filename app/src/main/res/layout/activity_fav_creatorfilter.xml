<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@drawable/fav_creator"
    tools:context=".FavCreator">

    <!-- Content View -->
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Follow Favourite Creator"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#D0FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search Creators"
            style="@style/SearchViewStyle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/verifiedfilter"
            android:layout_below="@id/searchView"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorTextSecondary"
                android:textSize="18dp"
                android:layout_marginLeft="120dp"
                android:text="Verified Creators"
                android:drawableLeft="@drawable/ic_verified_24"
                android:drawablePadding="10dp"/>
            <Switch
                android:id="@+id/filterVerifiedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchView"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="10dp"
                android:switchMinWidth="40dp"
                android:switchPadding="16dp"
                android:track="@drawable/customswitch"
                android:checked="false"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:thumbTint="@color/white" />
        </LinearLayout>

        <ListView
            android:id="@+id/creatorListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_below="@id/verifiedfilter"
            android:dividerHeight="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/creatorListView"
            android:id="@+id/nxtbtn"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Next"
            android:backgroundTint="@color/btncolor"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
