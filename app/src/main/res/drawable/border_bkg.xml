<!-- res/drawable/border_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <corners android:radius="16dp" />

    <!-- Border Stroke -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#C8FFFFFF"
                /> <!-- Background color -->
            <stroke
                android:width="1.5dp"
            android:color="#C6ED395C" />
            <corners android:radius="25dp" /><!-- Border color -->
        </shape>
    </item>
</layer-list>
