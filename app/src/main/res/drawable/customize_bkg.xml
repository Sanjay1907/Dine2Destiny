<!-- res/drawable/border_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <gradient
                android:startColor="@color/blue"
                android:endColor="#2B77FA"
                android:angle="450" /> <!-- Gradient colors and angle -->

            <stroke
                android:width="10dp"
                android:color="#00000000" /> <!-- Transparent stroke to show the gradient -->

            <corners android:radius="25dp" /> <!-- Border radius -->
        </shape>
    </item>
</layer-list>